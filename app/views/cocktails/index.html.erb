
<div class="front">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path("rbnq62rdrevbimxqa2af") %>)">
    C O C K T A I L S
    <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-primary bubu"%>
  </div>
</div>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.attached? %>
    <% path = cl_image_path cocktail.photo.key%>
    <!-- cl_image_path return the img path -->
    <% else %>
    <% path = cl_image_path("rbnq62rdrevbimxqa2af", width: 200, height: 200, crop: :fill) %>
    <% end %>
  <!-- background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),  -->
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= path %>)">
      <%= link_to cocktail.name, cocktail %>
    </div>
  <% end %>
</div>

