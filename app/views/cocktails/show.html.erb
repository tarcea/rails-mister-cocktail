<div class="container">
<div class="border-top">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1><%= @cocktail.name %></h1>
      <br>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.description%> <%= dose.ingredient.name %> |
      <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?', class: "delete-button" }%>
      <br>
      <% end %>
      <br>

      <%= link_to 'Back', root_path %> |
      <%= link_to 'Create dose', new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>




