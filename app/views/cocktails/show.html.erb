<div class="container">
<div class="border-top">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1><%= @cocktail.name %></h1>
      <br>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <br>
      <% @cocktail.doses.each do |dose| %>
        <strong><%= dose.description%></strong> <%= dose.ingredient.name %>
        <%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?', class: "delete-button" }%>
      <br>
      <% end %>
      <br>
      <%= link_to 'Back', root_path %> |
      <%= link_to 'Create dose', new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
  </div>
</div>




